@model TripViewModel

@{
    ViewBag.Title = "Add OldTrip - Page 3";
    ViewBag.SubHeader = $"Add Things To Do in {Model.OldTrip.Destination}";
}

<form asp-action="Add">
    <input type="hidden" asp-for="PageNumber" />

    <div class="form-group">
        <input asp-for="OldTrip.ThingToDo1" class="form-control" />
    </div>

    <div class="form-group">
        <input asp-for="OldTrip.ThingToDo2" class="form-control" />
    </div>

    <div class="form-group">
        <input asp-for="OldTrip.ThingToDo3" class="form-control" />
    </div>

    <div>
        <button type="submit" class="btn btn-dark">Save</button>
        <a asp-action="Cancel" class="btn btn-outline-dark">Cancel</a>
    </div>
</form>