@using TripLogDaAL.Entities
@model TripViewModel

@{
    ViewBag.Title = "Add Activities";
    ViewBag.SubHeader = $"Add Things To Do in {Model.trip.DestinationId}";
}

<form asp-action="Add">
    <input type="hidden" asp-for="PageNumber" />
    <input type="hidden" asp-for="trip.DestinationId" />
    <input type="hidden" asp-for="trip.AccommodationId" />
    <input type="hidden" asp-for="trip.StartDate" />
    <input type="hidden" asp-for="trip.EndDate" />
    <input type="hidden" asp-for="SelectedDestinationName" />
    
    <div class="form-control">
        <a asp-action="Index" asp-controller="Activity">Manage Activities</a>
    </div>
    <div class="form-group">
        @Html.ListBoxFor(x => x.trip.SelectedActivities, new SelectList(Model.Activities, "ActivityId", "ActivityName"), new { @class = "form-control" });
    </div>


    <div>
        <button type="submit" class="btn btn-dark">Save</button>
        <a asp-action="Cancel" class="btn btn-outline-dark">Cancel</a>
    </div>
</form>